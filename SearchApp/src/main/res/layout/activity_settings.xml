<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advanced_search_title"
        android:id="@+id/settingTitle"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Image size"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:entries="@array/image_size"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Color filter"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner2"
            android:entries="@array/image_color"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Image type"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
             />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner3"
            android:entries="@array/image_type"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="File type"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="18sp" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner4"
            android:entries="@array/image_file_type"
           />
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="save" />
</LinearLayout>